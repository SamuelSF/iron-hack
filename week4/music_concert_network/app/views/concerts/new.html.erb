<h2>New Concert</h2>

<% if @new_concert.errors.any? %>

    <ul>
        <% @new_concert.errors.full_messages.each do |error_msg| %>
        <li> <%= error_msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @new_concert do |f| %>
    <%= f.label :artist %>
    <%= f.text_field :artist %>
    <br>
    <%= f.label :venue %>
    <%= f.text_field :venue %>
    <br>
    <%= f.label :city %>
    <%= f.text_field :city %>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br>
    <%= f.label :date %>
    <%= f.datetime_local_field :date %>
    <br>
    <%= f.label :price %>
    <%= f.number_field :price %>
    <br>
    <%= f.submit "Save" %>
    <%= link_to("Cancel", concerts_path) %>
<% end %>