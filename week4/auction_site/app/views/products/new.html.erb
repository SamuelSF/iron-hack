<!-- new product form -->

<h1>Enter a new Product</h1>

<% if @the_product.errors.any? %>

    <ul>
        <% @the_product.errors.full_messages.each do |error_msg| %>
            <li> <%= error_msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for [@current_user, @the_product] do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br>
    <%= f.label :deadline %>
    <%= f.datetime_local_field :deadline %>
    <br>
    <%= f.submit "Submit" %>
    <%= link_to("Cancel", user_products_path(@current_user)) %>
<% end %>