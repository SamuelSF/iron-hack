<!-- new product form -->

<h1>Enter a new Product</h1>

<form action='product' method='post'>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
    <input type="hidden" name="product[user_id]" value"<%= @current_user_id %>">

    <div>
        <label for='product_title'>Title</label>
        <input type="text" name="product[title]" id="product_title">
    </div>

    <div>
        <label for="product_description">Description</label>
        <textarea name="product[description]" id="product_description"></textarea>
    </div>

    <div>
        <label for="product_deadline">Deadline</label>
        <input type="datetime" name="product[deadline]" id="product_deadline">
    </div>

    <button type="submit">Submit</button>
</form>

